@model int?
@{
    ViewData["Title"] = "Home Page";
     var userID = Model;
}

<style>
    body
    {
        background-image: url('images/WPage.png');
        background-size: 100% 100%;
        background-repeat: no-repeat;
    } 

    footer {
        position: fixed;
        bottom: 0;
        width: 100%;
        background-color: rgba(255, 255, 255, 0.8);
        padding: 10px;
    }

    .card {
        margin: 0 auto; 
        width: 80%; 
    }

    .card-body {
        padding: 10px;
    }

</style>

@if (!userID.HasValue)
{
    <div class="col-md-3">
        <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Login or Sign Up</h5>
                    <p class="card-text">Please login or sign up to access more features.</p>
                    <a href="@Url.Action("ShowLoginForm", "Home")" class="btn btn-primary">Login</a>
                    <a href="@Url.Action("ShowSignUpForm", "Home")" class="btn btn-secondary">Sign Up</a>
                </div>
            </div>
        </div>
}
else
{
    <form method="post" action="@Url.Action("Logout", "Login")">
        <button type="submit" class="btn btn-primary">Sign Out</button>
    </form>
}
